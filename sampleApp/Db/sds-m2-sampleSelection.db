# Flowmeter stuff
record(mbbi, "$(P):SEL:stateFlowMeter"){
	field(DESC, "Flowmeter state enumeration")
	field(DTYP, "Raw Soft Channel")
	field(INP, "$(P):SEL:rawStateFlowMeter CP")
	field(ZRVL, "0")
	field(ONVL, "1")
	field(TWVL, "2")
	field(THVL, "3")
	#state names
	field(ZRST, "OK")
	field(ONST, "OoR>")
	field(TWST, "<OoR")
	field(THST, "Flow Invalid")
	#severities
	field(ZRSV, "NO_ALARM")
	field(ONSV, "MINOR")
	field(TWSV, "MINOR")
	field(THSV, "MAJOR")
}

record(mbbi, "$(P):SEL:typeFlowMeter"){
	field(DESC, "Flowmeter type")
	field(DTYP, "Raw Soft Channel")
	field(INP, "$(P):SEL:rawTypeFlowMeter CP")
	field(ZRVL, "0")
	field(ONVL, "1")
	field(TWVL, "2")
	#state names
	field(ZRST, "Unrecognized")
	field(ONST, "Sensirion")
	field(TWST, "Bronkhorst")
	#state severities
	field(ZRSV, "MAJOR")
	field(ONSV, "NO_ALARM")
	field(TWSV, "NO_ALARM")
}



